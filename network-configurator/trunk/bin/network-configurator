use strict;
use warnings;
use Carp;

# use OSCAR::Network_Configurator;

use Getopt::Long;

my ($verbose, $debug);
GetOptions(
            "debug"     => \$debug,
            "help"      => \&help_and_exit,
            "verbose"   => \$verbose,
          ) || help_and_die();

sub help {
    print "For help information, please run \"man network-configurator\"\n";
}

sub help_and_die {
    help();
    exit 1;
}

sub help_and_exit {
    help();
    exit 0;
}

__END__

=head1 NAME

network-configurator, a script based on OSCAR utilities for network
configuration.

=head1 SYNOPSIS

network-configurator OPTIONS

=head1 OPTIONS
