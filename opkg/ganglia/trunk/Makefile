DESTDIR=

deb:
	/usr/bin/build_package --type deb --output $(DESTDIR) --url http://www.csm.ornl.gov/srt/downloads/oscar/ganglia-3.0.6.tar.gz --package-name ganglia --verbose

rpm:
	/usr/bin/build_package --type rpm --output $(DESTDIR) --url http://www.csm.ornl.gov/srt/downloads/oscar/ganglia-3.0.6.tar.gz --package-name ganglia --verbose
